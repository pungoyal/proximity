%head
  = javascript_src_tag "jquery", :cache => true
  %script{:src => "http://maps.google.com/maps/api/js?sensor=false", :type => "text/javascript"}
  = javascript_src_tag "proximity", :cache => true

  = stylesheet_link_tag 'main'

  %title
    Who is where?

%body
  %h1
    Where is who?
  .text
    Measuring from B1
  .contents

    #map

    .inputs
      .map-options
        Map Options
      Select the office - 
      %br
      %input.radio#b1{:type=>'radio', :name => 'office'}
        Bangalore ONE
      %br
      %input.radio#b2{:type=>'radio', :name => 'office'}
        Bangalore TWO
      .distance
        Radius (km)
        =text_field "radius", "", :size => 5
      .submit
        =submit_tag "Reload Map"