%head
  = javascript_src_tag "jquery", :cache => true
  %script{:src => "http://maps.google.com/maps/api/js?sensor=false", :type => "text/javascript"}
  = javascript_src_tag "proximity", :cache => true
  = stylesheet_link_tag 'main'

  %title
    Who is where?

%body
  %h1
    Where is who?
  .text
    Measuring from B1
  .contents
    #map
    .inputs
      .map-options
        Map Options
      Select the office - 
      %br
      %input.radio#1{:type=>'radio', :name => 'office', :checked => true}
        Bangalore ONE
      %br
      %input.radio#2{:type=>'radio', :name => 'office'}
        Bangalore TWO
      .distance
        Radius (mts)
        =text_field "radius", "", :size => 5, :value => 5000
      .submit
        %a{:href => '#'}
          Reload Map